<div class="jumbotron">

    <br>
    <br>
    <div class="row">
        <div class="col s12 m3 l3"></div>
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-content grey-text text-darken-4">
                    <span class="card-title center">Sign Up</span>
                    <div class="row">
                        <form class="col s12" id="user-form">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="firstName" type="text" class="validate" name="firstName">
                                    <label class="first_name">First Name</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="lastName" type="text" class="validate" name="lastName">
                                    <label class="last_name">Last Name</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="emailAddress" type="text" class="validate" name="email">
                                    <label class="email_address">Email</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="password" type="password" class="validate" name="password" minlength="8"
                                        required>
                                    <label for="password">Password</label>
                                </div>
                            </div>

                            <button id="signUp" class="btn waves-effect waves-light teal lighten-2" type="submit"
                                name="action">Sign Up
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l6"></div>
    </div>
</div>
<script src="/js/signup.js"></script>